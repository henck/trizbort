{{#each map.rooms}}
LOCATION {{className this.name}} NAME {{{this.name}}}
  {{#if this.description}}
  DESCRIPTION
    "{{{this.description}}}"
  {{/if}}
  {{#each this.connections}}
  EXIT {{ dirToStr this.startDir this.startType }} TO {{className this.room.name}}.
  {{/each}}
END LOCATION.
{{#if (isStartRoom this)}}START AT {{{className this.name}}}.
{{/if}}

{{#each this.objects}}
OBJECT {{className this.name}} NAME {{{objName this.name}}} AT {{{className ../this.name}}}
  {{#if this.description}}
  DESCRIPTION
    "{{{this.description}}}"
  {{/if}}
END OBJECT.
{{/each}}

{{/each}}
