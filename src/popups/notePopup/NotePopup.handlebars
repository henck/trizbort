<id-popup class="js-basic" title="Note details">
  <svg class="icon"><use href="icons.svg#font"></use></svg>
  <div class="popup-overlay" style="width:168px">
    <id-textarea class="js-text" data-label="Text" data-placeholder="Type note text here"></id-textarea>
  </div>
</id-popup>    
<id-popup class="js-fill" title="Fill color">
  <svg class="icon"><use href="icons.svg#paintbrush"></use></svg>
  <div class="popup-overlay" style="width:168px">
    <id-quick-color class="js-color"></id-quick-color>
  </div>      
</id-popup>
<id-popup class="js-line" title="Border style">
  <svg class="icon"><use href="icons.svg#line-solid"></use></svg>
  <div class="popup-overlay">
    <id-linestyle class="js-linestyle" data-none="true"></id-linestyle>
    <id-range class="js-linewidth" data-min="1" data-max="10"></id-range>
  </div>      
</id-popup>
<id-popup class="js-position" title="Note position">
  <svg class="icon"><use href="icons.svg#position"></use></svg>
  <div class="popup-overlay" style="width: 150px; padding-bottom: 8px">
    <div class="menuitem"><a href="#" class="js-front">Bring to Front</a></div>
    <div class="menuitem"><a href="#" class="js-forward">Bring Forward</a></div>
    <div class="menuitem"><a href="#" class="js-backward">Send Backward</a></div>
    <div class="menuitem"><a href="#" class="js-back">Send to Back</a></div>
  </div>  
</id-popup>
<id-popup class="js-delete" title="Delete note&nbsp;&nbsp;&nbsp;<kbd>Del</kdb>">
  <svg class="icon"><use href="icons.svg#trash"></use></svg>
</id-popup>
<id-popup class="js-more" title="More details">
  <svg class="icon"><use href="icons.svg#ellipsis-h"></use></svg>
</id-popup>