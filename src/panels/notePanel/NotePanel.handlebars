{{> closePanel}}

<h2>Note</h2>

<div class="tabs">
  <div class="tab selected" data-body="tab-note-info">Info</div>
  <div class="tab" data-body="tab-note-style">Style</div>
</div>

<div class="tab-body" id="tab-note-info">
  <id-shape class="js-shape" data-label="Note shape"></id-shape>   
  <id-range class="js-rounding" data-min="0" data-max="100" data-label="Rectangle rounding"></id-range>
  <id-textarea class="js-text" data-placeholder="Type note text here"></id-textarea>
</div>

<div class="tab-body" id="tab-note-style">
  <id-linestyle class="js-linestyle" data-none="true" data-label="Border style"></id-linestyle>
  <id-range class="js-linewidth" data-min="1" data-max="10"></id-range>  
  <label>Colors</label>
  <div style="display: flex">
    <div style="display: flex; flex-direction: column; flex-wrap: wrap">
      <id-popup title="Note fill" class="colortype selected" data-type="fill">
        <svg class="icon"><use href="icons.svg#note-fill"></use></svg>
      </id-popup>
      <id-popup title="Note border" class="colortype" data-type="border">
        <svg class="icon"><use href="icons.svg#note-border"></use></svg>
      </id-popup>
      <id-popup title="Note text" class="colortype" data-type="text">
        <svg class="icon"><use href="icons.svg#note-text"></use></svg>
      </id-popup>
    </div>
    <id-colorpicker class="js-color"></id-colorpicker>
  </div>
</div>